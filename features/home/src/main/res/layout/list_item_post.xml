<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="post"
            type="com.antique.home.data.PostUiState" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/post_divider_view"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/gray_e9"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/post_detail_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="16dp"
            android:text="@{post.details}"
            app:layout_constraintTop_toBottomOf="@id/post_divider_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/post_category_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/post_detail_view"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:textSize="12sp"
            android:textColor="@color/cyan_blue"
            android:text="@{post.category}" />

        <TextView
            android:id="@+id/date_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/post_category_view"
            app:layout_constraintTop_toTopOf="@id/post_category_view"
            app:layout_constraintBottom_toBottomOf="@id/post_category_view"
            android:layout_marginStart="6dp"
            android:text="@{post.date}"
            android:textSize="12sp"
            android:textColor="@color/gray_9d" />

        <TextView
            android:id="@+id/comment_count_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/post_category_view"
            app:layout_constraintStart_toStartOf="@id/post_category_view"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="12sp"
            android:textColor="@color/gray_9d"
            android:text="댓글 "
            android:layout_marginBottom="8dp"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/comment_count_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(post.commentCount)}"
            android:textSize="12sp"
            android:textColor="@color/gray_d9"
            app:layout_constraintTop_toTopOf="@id/comment_count_image_view"
            app:layout_constraintBottom_toBottomOf="@id/comment_count_image_view"
            app:layout_constraintStart_toEndOf="@id/comment_count_image_view"
            android:layout_marginStart="8dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>